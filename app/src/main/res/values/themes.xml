    <!-- Base application theme. -->
    <!-- Light theme. -->
    <style name="IslamicTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryIslamic</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkIslamic</item>
        <item name="colorAccent">@color/colorPrimaryIslamic</item>
        <!--        <item name="android:textColor">@color/color_text2</item>-->

        <item name="checkboxStyle">@style/MyCheckBoxStyle</item>
        <item name="editTextStyle">@style/MyEditTextStyle</item>
        <item name="android:textViewStyle">@style/TextViewHeading</item>
        <item name="android:buttonStyle">@style/MyButtonStyle</item>
