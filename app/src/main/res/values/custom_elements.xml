<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--    for checkbox-->
    <style name="MyCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox"></style>

    <style name="TextViewHeading" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--    for Edittext-->
    <style name="MyEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <!--    for ButtonStyle-->
    <style name="MyButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <!--    for Radio Button-->
    <style name="MyRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <!--    for Bottom Navigation-->
    <style name="MyBottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="itemBackground">@color/colorPrimaryIslamic</item>
        <item name="itemIconTint">@drawable/nav_item_color_state</item>
        <item name="itemTextColor">@drawable/nav_item_color_state</item>
        <item name="paddingStart">@dimen/_5sdp</item>
        <item name="paddingEnd">@dimen/_5sdp</item>
    </style>


    <!--    ISLAMIC STYLES -->

    <!--    for ButtonStyle-->
    <style name="MyButtonStyleIslamic" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/colorPrimaryIslamic</item>
    </style>

    <!--    For Bottom Navigation-->
    <style name="MyBottomNavigationIslamic" parent="Widget.Design.BottomNavigationView">
        <item name="itemBackground">@color/colorPrimary</item>
        <item name="itemIconTint">@drawable/nav_item_color_state</item>
        <item name="itemTextColor">@drawable/nav_item_color_state</item>
        <item name="paddingStart">@dimen/_5sdp</item>
        <item name="paddingEnd">@dimen/_5sdp</item>
    </style>


</resources>